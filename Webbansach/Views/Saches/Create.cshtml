                @Html.DropDownList("MaTacGia", (SelectList)ViewBag.MaTacGia, "-- Chọn tác giả --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTacGia, "", new { @class = "text-danger" })
            </div>
        </div>

