@model Webbansach.Models.Sach


@{
    ViewBag.Title = "Chi tiết sách";
}

<div class="container py-4">
    <div class="row align-items-stretch g-4">
        <!-- Ảnh sách -->
        <div class="col-lg-4 d-flex flex-column align-items-center">
            <img src="@Url.Content(Model.HinhAnh)" alt="@Model.TenSach"
                 class="img-fluid rounded shadow-sm mb-3" style="max-height:350px;object-fit:contain;" />
            <div class="d-flex flex-wrap justify-content-center gap-2 mt-2">
                <img src="@Url.Content(Model.HinhAnh)" class="rounded border" style="width:54px;height:54px;object-fit:cover;" />
            </div>
        </div>

        <!-- Thông tin + giá + nút -->
        <div class="col-lg-8 d-flex flex-column justify-content-center">
            <div class="d-flex align-items-center gap-2 mb-2">
                <span class="badge bg-danger">Mới</span>
                <h4 class="mb-0 text-dark">@Model.TenSach</h4>
            </div>
            <p>
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <big class="text-dark"><strong>Tác giả:</strong></big><span class="text-dark"> @Html.DisplayFor(model => model.TacGia.TenTacGia)</span>
                    </div>
                    <div class="col-md-6 mb-2">
                        <big class="text-dark"><strong>Nhà xuất bản:</strong></big><span class="text-dark"> @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-2">
                        <big class="text-dark"><strong>Thể loại:</strong></big><span class="text-dark">@Html.DisplayFor(model => model.TheLoai.TenTheLoai)</span>


                    </div>
                    <div class="col-md-6 mb-2">
                        <big class="text-dark"><strong>Hình thức bìa:</strong></big><span class="text-dark">Bìa mềm</span>

                    </div>
                </div>

                <big class="text-dark"><strong>Mô tả:</strong></big> <span class="text-dark">@Html.DisplayFor(model => model.MoTa)</span><br />
            </p>




            <h6 big class="text-dark"><strong>Thông tin chi tiết</strong></h6>
            <div class="d-flex align-items-center mb-2">
                <strong class="text-dark me-2">Mã sách:</strong>
                <span class="text-dark">@Model.MaSach</span>
            </div>


            <div class="d-flex align-items-center mb-2">
                <strong class="text-dark me-2">Số lượng còn:</strong>
                <span class="text-dark">@Model.SoLuongTon</span>
            </div>


            <h3 class="text-danger fw-bold mb-3">
                @((Model.GiaBan * 1000).ToString("N0")) đ
            </h3>
            <div class="d-flex gap-4 mt-4">
                <a href="@Url.Action("AddToCart", "Cart", new { id = Model.MaSach })"
                   class="btn btn-primary btn-lg px-4">
                    <i class="fa fa-cart-plus"></i> Thêm vào giỏ hàng
                </a>
                <a href="@Url.Action("PreOrder", "Cart", new { id = Model.MaSach })"
                   class="btn btn-primary btn-lg px-4">
                    <i class="fa fa-cart-plus"></i> Đặt trước
                </a>

            </div>


        </div>


    </div>
</div>
@{
    var sachList = ViewBag.AllSaches as List<Webbansach.Models.Sach>;
}

<h4 class="fw-bold mb-4 mt-5">SÁCH KHÁC</h4>
<div class="row row-cols-2 row-cols-sm-3 row-cols-lg-5 g-4">
    @foreach (var sach in sachList)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0 text-center">
                <a href="@Url.Action("Details", "Saches", new { id = sach.MaSach })" class="d-block">
                    <div class="ratio ratio-2x3">
                        <img src="@Url.Content(sach.HinhAnh)" class="card-img-top" alt="@sach.TenSach" style="object-fit:cover; border-radius:7px;">
                    </div>
                </a>
                <div class="card-body p-2 pb-0">
                    <div class="text-truncate" title="@sach.TenSach">@sach.TenSach</div>
                </div>
                <div class="card-body p-2">
                    <div class="text-danger fw-bold d-inline-block">@((sach.GiaBan*1000).ToString("N0")) đ</div>
                </div>
            </div>
        </div>
    }
</div>
<!-- CSS minimal để làm đẹp -->
<style>
    .ratio-2x3 {
        aspect-ratio: 2 / 3;
        width: 100%;
    }

    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 7px;
    }

    .card .badge {
        font-size: 0.95em;
        margin-top: 0.15em;
    }

    .card .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

