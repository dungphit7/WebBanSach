
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Đặt hàng";
    decimal total = ViewBag.Total ?? 0;
}

<h2>Địa chỉ giao hàng</h2>
<form method="post" action="@Url.Action("Checkout", "Cart")">
    @Html.AntiForgeryToken()
    <div>
        <label class="text-dark"><strong>Họ tên người nhận</strong></label>
        <input type="text" name="TenNguoiNhan" required class="form-control" />
    </div>
    <div>
        <label class="text-dark"><strong>Số điện thoại</strong></label>
        <input type="text" name="SdtNhan" required
               class="form-control"
               pattern="^\d{10}$"
               title="Số điện thoại phải đúng 10 số" />
    </div>

    <div>
        <label class="text-dark"><strong>Quốc gia</strong></label>
        <input type="text" name="Quocgia" required class="form-control" />
    </div>
    <div>
        <label class="text-dark"><strong>Tỉnh/Thành Phố</strong></label>
        <input type="text" name="Tpho" required class="form-control" />
    </div>
    <div>
        <label class="text-dark"><strong>Phường/Xã</strong></label>
        <input type="text" name="Phuong" required class="form-control" />
    </div>
    <div>
        <label class="text-dark"><strong>Địa chỉ nhận hàng</strong></label>
        <input type="text" name="DiaChiNhan" required class="form-control" />
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="chkStudent" style="cursor:pointer;">
        <label class="form-check-label font-weight-bold text-dark" for="chkStudent" style="cursor:pointer;">
            <strong>Tôi là Sinh Viên (Giảm 20%)</strong>
        </label>
    </div>
    <div id="student-info" style="display:none; margin-top: 15px;">
        <input type="text" name="studentId" class="form-control mb-2" placeholder="Nhập Mã Số Sinh Viên..." />
        <input type="text" name="university" class="form-control mb-2" placeholder="Nhập Tên Trường..." />
        <small class="text-muted font-italic">*Vui lòng chuẩn bị thẻ SV khi nhận hàng.</small>
    </div>



    <h4 class="text-dark">Phương thức vận chuyển</h4>
    <div class="mb-3">
        <div>
            <input type="radio" name="ShippingMethod" value="standard" id="shipping-standard" checked onchange="updateGrandTotal()" />
            <label for="shipping-standard">Giao hàng tiêu chuẩn: <strong>30.000 đ</strong></label>
        </div>
        <div>
            <input type="radio" name="ShippingMethod" value="economy" id="shipping-economy" onchange="updateGrandTotal()" />
            <label for="shipping-economy">Giao hàng tiết kiệm: <strong>20.000 đ</strong></label>
        </div>
        <div>
            <input type="radio" name="ShippingMethod" value="express" id="shipping-express" onchange="updateGrandTotal()" />
            <label for="shipping-economy">Giao hàng hỏa tốc: <strong>50.000 đ</strong></label>
        </div>

    </div>


    <h4 class="text-dark">Phương thức thanh toán</h4>
    <div class="mb-3">
        <div>
            <input type="radio" name="PaymentMethod" value="zalopay" id="zalopay" />
            <label for="zalopay"><img src=data:image/png;base64, width="40" /> ZaloPay</label>
        </div>

        <div>
            <input type="radio" name="PaymentMethod" value="shopeepay" id="shopeepay" />
            <label for="shopeepay"><img src=data:image/jpeg;base64, width="24" /> ShopeePay</label>
        </div>
        <div>
            <input type="radio" name="PaymentMethod" value="momo" id="momo" />
            <label for="momo"><img src=data:image/png;base64, width="24" /> Momo</label>
        </div>
        <div>
            <input type="radio" name="PaymentMethod" value="atm" id="atm" />
            <label for="atm"><img src=https://static.vecteezy.com/system/resources/previews/025/665/719/non_2x/atm-card-solid-icon-design-illustration-shipping-and-delivery-symbol-on-white-background-eps-10-file-vector.jpg width="24" /> ATM/Internet Banking</label>
        </div>
        <div>
            <input type="radio" name="PaymentMethod" value="visa" id="visa" />
            <label for="visa"><img src=data:image/png;base64, width="24" /> Visa/Master/JCB</label>
        </div>
        <div>
            <input type="radio" name="PaymentMethod" value="cod" id="cod" checked />
            <label for="cod"><img src=https://e1.pngegg.com/pngimages/254/201/png-clipart-carte-de-visite-paiement-argent-carte-de-credit-pret-carte-de-paiement-carte-de-debit-especes.png width="24" /> Thanh toán bằng tiền mặt khi nhận hàng</label>
        </div>
    </div>

   <div class="row mb-2">
    <div class="col-md-6 col-12 d-flex align-items-center">
        <span class="text-dark me-2">Thành tiền sau giảm:</span>
        <span class="fw-bold text-success" id="final-total">@total.ToString("N0"),000đ</span>
    </div>
    <div class="col-md-6 col-12 d-flex align-items-center justify-content-md-end" id="discount-row" style="display:none;">
        <span class="text-dark me-2">Giảm giá sinh viên:</span>
        <span class="fw-bold text-danger" id="discount-amount"></span>
    </div>
</div>




    <button type="submit" class="btn btn-success">Xác nhận đặt hàng</button>
</form>
<script>
   var baseTotal = @total; 
var feeStandard = 30000, feeEconomy = 20000, feeExpress = 50000;

function updateGrandTotal() {
    var shippingFee = 0;
    if (document.getElementById('shipping-standard').checked) shippingFee = feeStandard;
    if (document.getElementById('shipping-economy').checked) shippingFee = feeEconomy;
    if (document.getElementById('shipping-express') && document.getElementById('shipping-express').checked) shippingFee = feeExpress;

    var studentChecked = document.getElementById('chkStudent').checked;
    var itemCost = baseTotal * 1000;
    var discount = studentChecked ? Math.round(itemCost * 0.2) : 0;

    var discountRow = document.getElementById('discount-row');
    var discountSpan = document.getElementById('discount-amount');
    var finalSpan = document.getElementById('final-total');
    if (studentChecked) {
        document.getElementById('student-info').style.display = 'block';
        discountRow.style.display = 'flex';
        discountSpan.innerText = '-' + discount.toLocaleString('vi-VN') + 'đ';
    } else {
        document.getElementById('student-info').style.display = 'none';
        discountRow.style.display = 'none';
        discountSpan.innerText = '';
    }

    // Thành tiền sau giảm (chỉ giá sách)
    var afterDiscount = itemCost - discount;
    finalSpan.innerText = afterDiscount.toLocaleString('vi-VN') + 'đ';

    // Tổng cộng = giá sách giảm + phí vận chuyển
    var total = afterDiscount + shippingFee;
    document.getElementById('grand-total').innerText = total.toLocaleString('vi-VN') + "đ";
}

// Gắn sự kiện cho tất cả các input
document.getElementById('chkStudent').addEventListener('change', updateGrandTotal);
document.getElementById('shipping-standard').addEventListener('change', updateGrandTotal);
document.getElementById('shipping-economy').addEventListener('change', updateGrandTotal);
if (document.getElementById('shipping-express'))
    document.getElementById('shipping-express').addEventListener('change', updateGrandTotal);

// Gọi hàm lần đầu để hiển thị đúng khi load
updateGrandTotal();

</script>
<script>
    var originalTotal = @total;

    document.getElementById('chkStudent').addEventListener('change', function() {
        var infoBox = document.getElementById('student-info');
        var discountRow = document.getElementById('discount-row');
        var discountSpan = document.getElementById('discount-amount');
        var finalSpan = document.getElementById('final-total');

        if(this.checked) {
            // Nếu khách tích chọn -> Hiện ô nhập và Trừ tiền
            infoBox.style.display = 'block';
            discountRow.style.display = 'flex';

            var discount = originalTotal * 0.2; // Tính 20%
            var newTotal = originalTotal - discount;

            // Cập nhật số lên màn hình
            discountSpan.innerText = "-" + discount.toLocaleString('vi-VN') + "00đ";
            finalSpan.innerText = newTotal.toLocaleString('vi-VN') + "00đ";
        } else {
            // Nếu bỏ chọn -> Ẩn đi và Trả về giá gốc
            infoBox.style.display = 'none';
            discountRow.style.display = 'none';

            finalSpan.innerText = originalTotal.toLocaleString('vi-VN') + "00đ";

            // Xóa chữ đã nhập để tránh gửi nhầm    
            document.getElementsByName('studentId')[0].value = '';
            document.getElementsByName('university')[0].value = '';
        }
    });
</script>



